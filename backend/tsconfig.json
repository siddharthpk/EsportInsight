{
  "compilerOptions": {
    "target": "ES2019", // Compiled JavaScript version
    "module": "commonjs", // Use CommonJS modules for Node.js compatibility
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your TypeScript source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with non-ES module spec compliant code
    "skipLibCheck": true, // Skip type checking for all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true // Ensure case consistency in file names
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
